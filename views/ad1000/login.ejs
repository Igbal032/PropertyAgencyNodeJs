<%- include('../includes/head.ejs') %>
    </head>

    <body>

        <%- include('./includes/navigation.ejs') %>
            <div class="container mt-5 mb-5">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-md-8 col-12">
                        <h4 class="text-center">DAXIL OL</h4>
                        <form action="/ad1000/logAd1000" method="post">
                            <% if (errorMessage) { %>
                                <div class="text-danger"><%= errorMessage%></div>
                            <% } %>
                            <div class="form-group">
                                <label for="emailId">Email</label>
                                <input 
                                type="text" 
                                class="form-control" 
                                name="email" 
                                id="emailId"
                                value="<% if(hasError){%><%=oldInput.email%><%}%>"
                                placeholder="Emial Daxil edin">
                            </div>
                            <div class="form-group">
                                <label for="passwordId">Password</label>
                                <input 
                                type="password" 
                                class="form-control" 
                                name="password"
                                id="passwordId"
                                value="<% if(hasError){%><%=oldInput.password%><%}%>"
                                placeholder="Şifrə Daxil edin">
                            </div>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button type="submit" class="btn btn-primary">DAXIL OL</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="container" style="height: 100px"></div>
            <%- include('../includes/end.ejs') %>