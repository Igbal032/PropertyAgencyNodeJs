<%- include('../includes/head.ejs') %>
    </head>

    <body>

        <%- include('./includes/navigation.ejs') %>
            <div class="container mt-5 mb-5">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-md-8 col-12">
                        <h4 class="text-center">Xidmət Əlavə et</h4>
                        <form action="" method="post">
                            <div class="form-group">
                                <label for="nameId">Xidmətin adı</label>
                                <input type="text" class="form-control" name="sName" id="nameId"
                                    placeholder="Xidmətin adını daxil et">
                            </div>

                            <div class="form-group">
                                <label for="sTitle">Başlıq</label>
                                <input type="text" name="sTitle" class="form-control" id="sTitle"
                                    placeholder="Başlıq daxil et">
                            </div>

                            <div class="form-group">
                                <label for="imgPathId">Şəkil</label>
                                <input type="file" name="cImg" class="form-control" id="imgPathId"
                                    placeholder="Şəkil elave edin">
                            </div>

                            <div class="form-group">
                                <label for="descriptionId">Təsviri</label>
                                <textarea name="sDescription" class="form-control" id="descriptionId"
                                    placeholder="Təsviri daxil et" rows="5"></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary">Əlavə et</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="container" style="height: 100px"></div>
            <%- include('../includes/end.ejs') %>