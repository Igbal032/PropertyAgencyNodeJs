<%- include('../includes/head.ejs') %>
    </head>

    <body>

        <%- include('./includes/navigation.ejs') %>
            <div class="container mt-5 mb-5">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-md-8 col-12">
                        <h4 class="text-center">Şirket Haqqında</h4>
                        <form action="/ad1000/<%= company==null?'index':'editCompany'%>" method="post">
                            <input name="cId" type="hidden" value="<%= company==null?'':company.id%>">
                            <div class="form-group">
                                <label for="nameId">Şirkətin adı</label>
                                <input type="text" class="form-control" name="cName" id="nameId"
                                    placeholder="Şirkətin adını daxil et" value="<%= company==null?'':company.name%>">
                            </div>
                            <div class="form-group">
                                <label for="emailId">E-poçt adresi</label>
                                <input type="email" name="cEmail" class="form-control" id="emailId"
                                    placeholder="E-poçt adresini daxil et" value="<%= company==null?'':company.email%>">
                            </div>

                            <div class="form-group">
                                <label for="phoneId">Şirkətin nömrəsi</label>
                                <input type="text" name="cPhone" class="form-control" id="phoneId"
                                    placeholder="Şirkətin adını daxil et" value="<%= company==null?'':company.phone%>">
                            </div>

                            <div class="form-group">
                                <label for="logoId">Logo</label>
                                <input type="file" name="cLogo" class="form-control" id="logoId"
                                    placeholder="Logo elave edin">
                            </div>

                            <div class="form-group">
                                <label for="addressId">Şirkətin adresi</label>
                                <textarea name="cAddress" class="form-control" id="addressId"
                                    placeholder="Şirkətin adresini daxil et" rows="5" ><%= company==null?'':company.address%></textarea>
                            </div>
                            
                            <button type="submit" class="btn btn-primary"><%= company==null?'Əlavə et':'Redaktə et'%></button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="container" style="height: 100px"></div>
            <%- include('../includes/end.ejs') %>